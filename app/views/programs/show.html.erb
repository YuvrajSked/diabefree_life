<div class="container mx-auto px-4 py-12">
  <div class="max-w-4xl mx-auto">
    <div class="bg-white rounded-lg shadow-lg overflow-hidden">
      <div class="p-8">
        <div class="flex justify-between items-start mb-6">
          <div>
            <span class="inline-block px-3 py-1 rounded-full text-sm font-semibold bg-blue-100 text-blue-800 mb-4">
              <%= @program['program_type'].capitalize %>
            </span>
            <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= @program['title'] %></h1>
            <p class="text-xl text-gray-600 mb-6"><%= @program['description'] %></p>
          </div>
          <div class="text-right">
            <div class="text-3xl font-bold text-gray-900">$<%= '%.2f' % @program['price'] %></div>
            <div class="text-gray-500">for <%= @program['duration'] %> days</div>
          </div>
        </div>

        <div class="prose max-w-none mb-8">
          <h3 class="text-xl font-semibold mb-4">Program Features</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <% @program['features'].split('\n').each do |feature| %>
              <div class="flex items-start">
                <svg class="h-6 w-6 text-green-500 mr-2 mt-1 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span><%= feature %></span>
              </div>
            <% end %>
          </div>
        </div>

        <div class="mt-8 pt-6 border-t border-gray-200">
          <button class="w-full md:w-auto px-8 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition duration-200 text-lg font-semibold">
            Enroll Now
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
